<body>
  <div id="root">
    <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh;">
      <div class="loader-spinner"></div>
      <p style="margin-top: 20px; color: #64748b; font-size: 14px; font-weight: 800; font-family: 'Nunito', sans-serif;">MEMULAKAN ANALISIS SARAWAK...</p>
    </div>
  </div>

  <script type="text/babel">
    const { useState, useMemo, useEffect, Fragment } = React;
    const { BarChart, Bar, XAxis, YAxis, ResponsiveContainer, Cell, LabelList, Legend, Tooltip } = window.Recharts;

    const appId = 'jpns-sarawak-2027-official';
    const COHORT_NAMES = { C7: 'Umur 6+ (7 Tahun)', C6: 'Umur 5+ (6 Tahun)', LUAR: 'Luar Kohort' };
    const COHORT_RANGES_INT = { C7: { start: 20200102, end: 20210101 }, C6: { start: 20210102, end: 20220101 } };
    const THEME = { chartColors: ['#EF4444', '#F59E0B', '#3B82F6', '#8B5CF6', '#EC4899'] };

    const PPD_LIST = [
      "BARAM", "BAU", "BELAGA", "BETONG", "BINTULU", "DALAT", "DARO", 
      "JULAU", "KANOWIT", "KAPIT", "KUCHING", "LAWAS", "LIMBANG", 
      "LUBOK ANTU", "LUNDU", "MERADONG", "MIRI", "MUKAH", 
      "PADAWAN", "SAMARAHAN", "SARATOK", "SARIKEI", "SELANGAU", 
      "SERIAN", "SIBU", "SIMUNJAN", "SONG", "SRI AMAN", "SUBIS", "TATAU"
    ].sort(); 

    const Icons = {
      Upload: () => <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" strokeWidth="2.5" strokeLinecap="round" strokeLinejoin="round"/></svg>,
      Activity: () => <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M13 10V3L4 14h7v7l9-11h-7z" strokeWidth="2.5" strokeLinecap="round" strokeLinejoin="round"/></svg>,
      Download: () => <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" strokeWidth="2.5" strokeLinecap="round" strokeLinejoin="round"/></svg>,
      Search: () => <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" strokeWidth="2.5" strokeLinecap="round" strokeLinejoin="round"/></svg>,
      Trash: () => <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-4v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" strokeWidth="2.5" strokeLinecap="round" strokeLinejoin="round"/></svg>,
      Info: () => <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 16h.01M12 12h.01M12 8h.01M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" strokeWidth="2.5" strokeLinecap="round" strokeLinejoin="round"/></svg>,
      Users: () => <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2 M16 3.13a4 4 0 0 1 0 7.75 M23 21v-2a4 4 0 0 0-3-3.87" strokeWidth="2.5" strokeLinecap="round" strokeLinejoin="round"/></svg>,
      FileText: () => <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z M14 2v6h6" strokeWidth="2.5" strokeLinecap="round" strokeLinejoin="round"/></svg>
    };

    const App = () => {
      const [ppdDataMap, setPpdDataMap] = useState({}); 
      const [loading, setLoading] = useState(true);
      const [activeTab, setActiveTab] = useState('dashboard');
      const [manualPPD, setManualPPD] = useState('');
      const [selectedPPD, setSelectedPPD] = useState('SEMUA PPD');
      const [searchQuery, setSearchQuery] = useState('');
      const [user, setUser] = useState(null);
      const [toast, setToast] = useState(null);

      const firebaseConfig = {
        apiKey: "AIzaSyABRH2RUVWYB77uNXsk4BHuJw4IrtP3O3c",
        authDomain: "thn1jpn.firebaseapp.com",
        projectId: "thn1jpn",
        storageBucket: "thn1jpn.firebasestorage.app",
        messagingSenderId: "901531240540",
        appId: "1:901531240540:web:b49a624f2313ac5e493e99"
      };

      if (!firebase.apps.length) firebase.initializeApp(firebaseConfig);
      const db = firebase.firestore();
      const auth = firebase.auth();

      // Penyatuan Data secara unik berdasarkan MyKid
      useEffect(() => {
        let isMounted = true;
        auth.signInAnonymously().then(cred => {
          if (isMounted) setUser(cred.user);
          const colRef = db.collection('artifacts').doc(appId).collection('public').doc('data').collection('permohonan');
          return colRef.onSnapshot(snapshot => {
            if (isMounted) {
              const newMap = {};
              snapshot.forEach(doc => {
                const rows = doc.data().rows || [];
                if (doc.id === 'master') {
                   rows.forEach(r => {
                      if (!r.icClean && r.icFormatted) {
                         r.icClean = String(r.icFormatted).replace(/[^0-9]/g, '');
                      }
                      const pKey = r.ppd || 'TIADA MAKLUMAT';
                      if (!newMap[pKey]) newMap[pKey] = [];
                      newMap[pKey].push(r);
                   });
                } else {
                   newMap[doc.id] = rows;
                }
              });
              setPpdDataMap(newMap);
              setLoading(false);
            }
          }, (err) => { if (isMounted) setLoading(false); });
        }).catch(() => { if (isMounted) setLoading(false); });
        return () => { isMounted = false; };
      }, []);

      const allDataUnique = useMemo(() => {
        const merged = [];
        const seen = new Set();
        Object.values(ppdDataMap).flat().forEach(r => {
           if (r && (r.icClean || r.icFormatted)) {
             const key = r.icClean || String(r.icFormatted).replace(/[^0-9]/g, '');
             if (key && !seen.has(key)) {
               seen.add(key);
               merged.push({ ...r, icClean: key });
             }
           }
        });
        return merged;
      }, [ppdDataMap]);

      const handleFileUpload = (e) => {
        if (!user) return;
        const file = e.target.files[0];
        if(!file) return;
        if (!manualPPD) { setToast({ message: "Sila pilih PPD dahulu!", type: "error" }); return; }

        setLoading(true);
        const reader = new FileReader();
        const isExcel = file.name.toLowerCase().endsWith('.xlsx') || file.name.toLowerCase().endsWith('.xls');

        reader.onload = async (ev) => {
          try {
            let rawRows = [];
            if (isExcel) {
              const workbook = XLSX.read(new Uint8Array(ev.target.result), { type: 'array' });
              const worksheet = workbook.Sheets[workbook.SheetNames[0]];
              const dataRows = XLSX.utils.sheet_to_json(worksheet, { header: 1, defval: "" });
              
              let headerIdx = -1;
              for (let i = 0; i < Math.min(60, dataRows.length); i++) {
                const rowStr = dataRows[i].join('').toUpperCase();
                if (rowStr.includes('NAMA') || rowStr.includes('IC') || rowStr.includes('MYKID')) {
                  headerIdx = i; break;
                }
              }
              if (headerIdx === -1) {
                setToast({ message: "Tajuk lajur Nama/IC tidak ditemui.", type: "error" });
                setLoading(false); return;
              }
              const headers = dataRows[headerIdx];
              for (let i = headerIdx + 1; i < dataRows.length; i++) {
                const rowObj = {};
                let hasVal = false;
                dataRows[i].forEach((val, idx) => {
                  if (headers[idx]) { rowObj[headers[idx]] = val; if (val) hasVal = true; }
                });
                if (hasVal) rawRows.push(rowObj);
              }
            } else {
              const text = ev.target.result;
              const lines = text.split(/\r\n|\n/);
              const delimiter = lines[0].includes('\t') ? '\t' : ',';
              const headers = lines[0].split(delimiter).map(h => h.trim().replace(/^"|"$/g, ''));
              for (let i = 1; i < lines.length; i++) {
                const row = {};
                const cols = lines[i].split(delimiter);
                if (cols.length <= 1 && !cols[0]) continue;
                headers.forEach((h, idx) => { row[h] = cols[idx] ? cols[idx].trim().replace(/^"|"$/g, '') : ''; });
                rawRows.push(row);
              }
            }

            const currentPpdRows = ppdDataMap[manualPPD] || [];
            const seenICsInAll = new Set(allDataUnique.map(d => String(d.icClean))); 
            const newRecords = [];

            rawRows.forEach((r) => {
              let icRaw = null;
              for (const key in r) {
                const k = key.toUpperCase().replace(/\s/g, '');
                if (!icRaw && (k.includes('KADPENGENALAN') || k.includes('MYKID') || k === 'IC' || k === 'NOKP')) icRaw = r[key];
              }

              if (!icRaw) return;
              const icClean = String(icRaw).replace(/[^0-9]/g, '');
              if(icClean.length < 6 || seenICsInAll.has(icClean)) return;
              seenICsInAll.add(icClean);
              
              let coh = COHORT_NAMES.LUAR, dob = '-';
              const yy = parseInt(icClean.substring(0, 2), 10), mm = parseInt(icClean.substring(2, 4), 10), dd = parseInt(icClean.substring(4, 6), 10);
              if (!isNaN(yy) && !isNaN(mm) && !isNaN(dd)) {
                  const fullYear = yy >= 0 && yy <= 30 ? 2000 + yy : 1900 + yy;
                  dob = `${dd.toString().padStart(2, '0')}/${mm.toString().padStart(2, '0')}/${fullYear}`;
                  const dobInt = parseInt(`${fullYear}${String(mm).padStart(2,'0')}${String(dd).padStart(2,'0')}`, 10);
                  if (dobInt >= COHORT_RANGES_INT.C7.start && dobInt <= COHORT_RANGES_INT.C7.end) coh = COHORT_NAMES.C7;
                  else if (dobInt >= COHORT_RANGES_INT.C6.start && dobInt <= COHORT_RANGES_INT.C6.end) coh = COHORT_NAMES.C6;
              }
              const gen = parseInt(icClean.substring(11, 12), 10) % 2 !== 0 ? 'Lelaki' : 'Perempuan';

              newRecords.push({ 
                nama: r['Nama Murid'] || r['NAMA'] || 'TANPA NAMA', 
                ppd: manualPPD.toUpperCase(), 
                icFormatted: icRaw, icClean: icClean,
                tarikhLahir: dob, jantina: gen, kohort: coh
              });
            });

            if (newRecords.length > 0) {
              const updatedPpdRows = [...currentPpdRows, ...newRecords];
              await db.collection('artifacts').doc(appId).collection('public').doc('data').collection('permohonan').doc(manualPPD).set({ 
                rows: updatedPpdRows, lastUpdated: new Date().toISOString() 
              });
              setToast({ message: `BERJAYA! ${newRecords.length} rekod baharu ditambah.`, type: "success" });
            } else {
              setToast({ message: "Tiada rekod baharu dikesan.", type: "error" });
            }
          } catch(err) { setToast({ message: "Ralat memproses fail muat naik.", type: "error" }); }
          setLoading(false);
          e.target.value = null;
        };
        if (isExcel) reader.readAsArrayBuffer(file); else reader.readAsText(file);
      };

      const handleDownloadCSV = () => {
        if (!allDataUnique.length) return;
        const headers = ["PPD", "NAMA MURID", "NO MYKID", "TARIKH LAHIR", "JANTINA", "KOHORT"];
        const rows = allDataUnique.map(d => [d.ppd, d.nama, d.icClean, d.tarikhLahir, d.jantina, d.kohort]);
        const csvContent = "data:text/csv;charset=utf-8," + [headers.join(","), ...rows.map(r => r.join(","))].join("\n");
        const link = document.createElement("a");
        link.setAttribute("href", encodeURI(csvContent));
        link.setAttribute("download", `Analisis_Sarawak_2027.csv`);
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
      };

      const handleDeletePPDData = async () => {
        if (!manualPPD) { setToast({message: "Pilih PPD untuk dipadam!", type: "error"}); return; }
        if (!confirm(`Padam semua data PPD ${manualPPD} secara kekal?`)) return;
        setLoading(true);
        try {
           await db.collection('artifacts').doc(appId).collection('public').doc('data').collection('permohonan').doc(manualPPD).delete();
           setToast({message: `Data PPD ${manualPPD} telah dibersihkan.`, type: "success"});
        } catch(e) { setToast({message: "Gagal memadam data.", type: "error"}); }
        setLoading(false);
      };

      const stats = useMemo(() => {
        const pool = selectedPPD === 'SEMUA PPD' ? allDataUnique : allDataUnique.filter(d => d.ppd.includes(selectedPPD));
        if(!pool.length) return { total:0, cBar:[], genderData:[], ppdList:[], activePPDs: 0 };
        
        const c7 = pool.filter(d => d.kohort === COHORT_NAMES.C7).length;
        const c6 = pool.filter(d => d.kohort === COHORT_NAMES.C6).length;
        const male = pool.filter(d => d.jantina === 'Lelaki').length;
        const female = pool.filter(d => d.jantina === 'Perempuan').length;

        // Agregat PPD berdasarkan pool unik
        const ppdGroups = {};
        pool.forEach(r => {
           const p = r.ppd || 'TIADA MAKLUMAT';
           if (!ppdGroups[p]) ppdGroups[p] = { name: p, total: 0, c7: 0, c6: 0 };
           ppdGroups[p].total++;
           if (r.kohort === COHORT_NAMES.C7) ppdGroups[p].c7++;
           if (r.kohort === COHORT_NAMES.C6) ppdGroups[p].c6++;
        });

        return { 
          total: pool.length, 
          activePPDs: Object.keys(ppdDataMap).filter(k => ppdDataMap[k].length > 0).length,
          cBar: [{name:'6+ (7 Thn)', value:c7, color:THEME.chartColors[1]}, {name:'5+ (6 Thn)', value:c6, color:THEME.chartColors[0]}], 
          genderData: [{name:'Lelaki', value:male, color:THEME.chartColors[3]}, {name:'Perempuan', value:female, color:THEME.chartColors[5]}], 
          ppdList: Object.values(ppdGroups).sort((a,b) => b.total - a.total)
        };
      }, [allDataUnique, selectedPPD, ppdDataMap]);

      if (loading) return (
        <div className="min-h-screen flex items-center justify-center flex-col font-['Nunito']">
          <div className="loader-spinner"></div>
          <p className="mt-4 text-slate-400 font-bold text-[10px] uppercase tracking-widest italic">Menyegerakkan Data Sarawak...</p>
        </div>
      );

      return (
        <div className="min-h-screen pb-10">
          {toast && <Toast message={toast.message} type={toast.type} onClose={() => setToast(null)} />}

          <header className="glass-header px-10 py-6 flex flex-col md:flex-row justify-between items-center gap-6 shadow-sm no-print">
            <div className="flex items-center gap-6">
              <div className="w-14 h-14 bg-gradient-to-br from-red-600 to-black rounded-2xl flex items-center justify-center text-white font-black text-xl shadow-xl rotate-2 shrink-0">JPNS</div>
              <div>
                <h1 className="text-xl md:text-2xl font-[900] text-slate-900 uppercase tracking-tighter leading-tight">Analisis Permohonan Tahun 1<br/><span className="text-xs md:text-sm font-bold text-slate-500 uppercase tracking-widest">Sesi Akademik 2027, Jabatan Pendidikan Negeri Sarawak</span></h1>
              </div>
            </div>
            <div className="flex bg-slate-100 p-1.5 rounded-2xl w-fit font-black uppercase text-[10px]">
               <button onClick={()=>setActiveTab('dashboard')} className={`px-8 py-3 rounded-[1.2rem] transition-all duration-300 ${activeTab==='dashboard'?'active-tab-btn':'text-slate-400 hover:text-slate-700'}`}>ANALISIS</button>
               <button onClick={()=>setActiveTab('list')} className={`px-8 py-3 rounded-[1.2rem] transition-all duration-300 ${activeTab==='list'?'active-tab-btn':'text-slate-400 hover:text-slate-700'}`}>PENGURUSAN DATA</button>
               <button onClick={()=>setActiveTab('info')} className={`px-8 py-3 rounded-[1.2rem] transition-all duration-300 ${activeTab==='info'?'active-tab-btn':'text-slate-400 hover:text-slate-700'}`}>INFO SISTEM</button>
            </div>
          </header>

          <main className="max-w-7xl mx-auto px-6 py-8 space-y-12">
            
            {activeTab === 'dashboard' && (
              <div className="space-y-12 animate-fade-in font-['Nunito']">
                
                {/* GRID STATISTIK UTAMA */}
                <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
                   <div className="p-8 premium-card border-l-8 border-l-blue-600 bg-white flex flex-col justify-center">
                      <div className="flex justify-between items-start mb-2">
                        <p className="text-slate-400 text-[10px] font-black uppercase">Permohonan Unik</p>
                        <div className="p-3 bg-blue-50 text-blue-600 rounded-2xl shadow-sm"><Icons.FileText /></div>
                      </div>
                      <h3 className="text-5xl font-[900] text-slate-900 leading-none">{stats.total.toLocaleString()}</h3>
                      <p className="mt-4 flex items-center gap-2 text-[10px] font-black text-blue-600 uppercase tracking-widest">
                         Daerah Aktif: {stats.activePPDs}/30
                      </p>
                   </div>

                   <div className="p-8 premium-card">
                      <div className="flex justify-between items-start mb-4">
                        <p className="text-slate-400 text-[10px] font-black uppercase">Analisis Kohort</p>
                        <div className="p-3 bg-orange-50 text-orange-600 rounded-2xl shadow-sm"><Icons.Activity /></div>
                      </div>
                      <div className="h-32 chart-container no-print">
                        <ResponsiveContainer width="100%" height="100%">
                          <BarChart data={stats.cBar} layout="vertical" margin={{right: 50, left: 10}}>
                            <XAxis type="number" hide />
                            <YAxis dataKey="name" type="category" width={80} tick={{fontSize: 10, fontWeight: 800, fill: '#64748b'}} axisLine={false} tickLine={false} />
                            <Bar dataKey="value" radius={[0, 4, 4, 0]} barSize={20}>
                              {stats.cBar.map((e, i) => <Cell key={i} fill={e.color} />)}
                              <LabelList dataKey="value" position="right" fontSize={11} fontWeight={900} fill="#1e293b" />
                            </Bar>
                          </BarChart>
                        </ResponsiveContainer>
                      </div>
                   </div>

                   <div className="p-8 premium-card">
                      <div className="flex justify-between items-start mb-4">
                        <p className="text-slate-400 text-[10px] font-black uppercase">Pecahan Jantina</p>
                        <div className="p-3 bg-purple-50 text-purple-600 rounded-2xl shadow-sm"><Icons.Users /></div>
                      </div>
                      <div className="h-32 chart-container no-print">
                        <ResponsiveContainer width="100%" height="100%">
                          <BarChart data={stats.genderData} layout="vertical" margin={{right: 50, left: 10}}>
                            <XAxis type="number" hide />
                            <YAxis dataKey="name" type="category" width={60} tick={{fontSize: 10, fontWeight: 800, fill: '#64748b'}} axisLine={false} tickLine={false} />
                            <Bar dataKey="value" radius={[0, 4, 4, 0]} barSize={20}>
                              {stats.genderData.map((e, i) => <Cell key={i} fill={e.color} />)}
                              <LabelList dataKey="value" position="right" fontSize={11} fontWeight={900} fill="#1e293b" />
                            </Bar>
                          </BarChart>
                        </ResponsiveContainer>
                      </div>
                   </div>
                </div>

                {/* JADUAL RUMUSAN PPD */}
                <div className="premium-card">
                   <div className="p-10 border-b bg-slate-50/50 flex flex-col md:flex-row justify-between items-center gap-6">
                      <div className="flex items-center gap-4">
                         <h3 className="text-sm font-black text-slate-900 uppercase tracking-widest">Rumusan Daerah Sarawak</h3>
                         <select value={selectedPPD} onChange={(e)=>setSelectedPPD(e.target.value)} className="no-print pl-4 pr-10 py-3 bg-white border border-slate-200 rounded-xl text-[10px] font-black uppercase tracking-widest shadow-sm outline-none focus:ring-2 focus:ring-red-500/20">
                            <option value="SEMUA PPD">Filter PPD</option>
                            {PPD_LIST.map(p => <option key={p} value={p}>{p}</option>)}
                         </select>
                      </div>
                      <div className="no-print relative w-full md:w-96 group">
                         <Icons.Search className="absolute left-4 top-4 w-5 h-5 text-slate-400 group-focus-within:text-red-600 transition-colors"/>
                         <input type="text" placeholder="Cari nama daerah..." value={searchQuery} onChange={(e)=>setSearchQuery(e.target.value)} className="w-full pl-12 pr-6 py-4 bg-white border border-slate-200 rounded-2xl text-xs font-black outline-none focus:ring-4 focus:ring-red-500/10 shadow-inner transition-all"/>
                      </div>
                   </div>
                   <div className="overflow-x-auto">
                      <table className="min-w-full divide-y divide-slate-100 text-center uppercase font-black">
                         <thead className="bg-slate-50 font-black">
                           <tr>
                             <th className="px-8 py-6 text-[11px] text-slate-400 tracking-widest">Bil</th>
                             <th className="px-8 py-6 text-[11px] text-slate-400 tracking-widest text-left">PPD</th>
                             <th className="px-8 py-6 text-[11px] text-red-500 tracking-widest bg-red-50/50">Jumlah</th>
                             <th className="px-8 py-6 text-[11px] text-slate-400 tracking-widest">6+ (7 Thn)</th>
                             <th className="px-8 py-6 text-[11px] text-slate-400 tracking-widest">5+ (6 Thn)</th>
                           </tr>
                         </thead>
                         <tbody className="divide-y divide-slate-100 bg-white">
                            {stats.ppdList.filter(p=>p.name.includes(searchQuery.toUpperCase())).map((p, i)=>(
                               <tr key={p.name} className="hover:bg-slate-50 transition-all group">
                                  <td className="px-8 py-6 text-xs text-slate-300 font-bold">{i+1}</td>
                                  <td className="px-8 py-6 text-xs text-slate-800 text-left font-black">{p.name}</td>
                                  <td className="px-8 py-6 text-xs text-red-600 font-[900]">{p.total}</td>
                                  <td className="px-8 py-6 text-xs text-slate-600 font-bold">{p.c7}</td>
                                  <td className="px-8 py-6 text-xs text-slate-600 font-bold">{p.c6}</td>
                               </tr>
                            ))}
                         </tbody>
                      </table>
                   </div>
                </div>
              </div>
            )}

            {activeTab === 'list' && (
              <div className="max-w-4xl mx-auto space-y-10 animate-fade-in no-print text-center font-['Nunito']">
                <div className="bg-white p-12 rounded-[4rem] shadow-xl border border-slate-100">
                  <div className="mb-10 max-w-sm mx-auto font-['Nunito']">
                    <label className="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4">Langkah 1: Pilih PPD Utama</label>
                    <select value={manualPPD} onChange={(e)=>setManualPPD(e.target.value)} className="w-full px-8 py-4 bg-slate-50 border-2 border-slate-100 rounded-[1.5rem] text-xs font-black outline-none focus:border-red-500 transition-all text-center shadow-inner font-black uppercase tracking-widest"><option value="">-- SILAH PILIH DAERAH --</option>{PPD_LIST.map(p => <option key={p} value={p}>PPD {p}</option>)}</select>
                  </div>
                  
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
                    <label className="bg-slate-900 text-white py-6 rounded-[2rem] font-black uppercase text-[10px] tracking-[0.3em] cursor-pointer hover:bg-black transition-all shadow-xl flex items-center justify-center gap-3 active:scale-95 btn-action">
                      <Icons.Upload /> Muat Naik Fail
                      <input type="file" accept=".csv,.xlsx,.xls" className="hidden" onChange={handleFileUpload} />
                    </label>
                    
                    <button onClick={handleDownloadCSV} disabled={!allDataUnique.length} className="bg-blue-600 text-white py-6 rounded-[2rem] font-black uppercase text-[10px] tracking-[0.3em] hover:bg-blue-700 transition-all shadow-xl flex items-center justify-center gap-3 active:scale-95 disabled:opacity-30 btn-action">
                      <Icons.Download /> Muat Turun CSV
                    </button>
                  </div>

                  <div className="flex flex-col gap-4 items-center pt-8 border-t border-slate-100">
                    <button onClick={handleDeletePPDData} disabled={!manualPPD} className="w-full max-w-sm bg-red-50 text-red-600 py-4 rounded-2xl font-black uppercase text-[10px] tracking-widest hover:bg-red-100 transition-all border border-red-100 flex items-center justify-center gap-2 disabled:opacity-20 btn-action font-black">
                       <Icons.Trash /> Padam Data PPD {manualPPD}
                    </button>
                    <p className="text-[9px] text-slate-400 font-black uppercase tracking-widest mt-4 leading-relaxed">
                       Sistem menggunakan No. MyKid unik. Sebarang permohonan murid yang sama <br/> merentas fail yang berbeza akan digabungkan secara automatik.
                    </p>
                  </div>
                </div>
              </div>
            )}

            {activeTab === 'info' && (
              <div className="max-w-4xl mx-auto space-y-8 animate-fade-in text-left font-['Nunito']">
                 <div className="premium-card p-10 space-y-10 font-black uppercase text-[10px]">
                    <div className="flex items-center gap-4 border-b border-slate-100 pb-8">
                       <div className="p-4 bg-blue-50 text-blue-600 rounded-3xl"><Icons.Info className="w-8 h-8"/></div>
                       <h2 className="text-2xl font-black text-slate-900 tracking-tighter">Info & Kawalan Sistem</h2>
                    </div>
                    
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-12 font-black">
                       <div className="space-y-8">
                          <div>
                             <h4 className="text-slate-800 mb-3 text-xs tracking-wide">1. Konsolidasi Data (Unique)</h4>
                             <p className="text-slate-500 font-bold leading-relaxed text-[11px]">Sistem menggabungkan semua dokumen daripada setiap PPD. Jumlah unik murid (Identity-Based) digunakan sebagai metrik utama. Ini bermakna jika data murid yang sama dimasukkan dua kali merentas fail yang berbeza, ia hanya akan dikira sekali sahaja bagi memastikan ketepatan permohonan negeri.</p>
                          </div>
                          <div>
                             <h4 className="text-slate-800 mb-3 text-xs tracking-wide">2. Penyimpanan Awan Sarawak</h4>
                             <p className="text-slate-500 font-bold leading-relaxed text-[11px]">Setiap PPD mempunyai ruang storan berasingan di bawah pangkalan data Firestore. Ini menyelesaikan isu ralat 1MB Firebase secara kekal, membolehkan puluhan ribu rekod diproses serentak tanpa menjejaskan prestasi sistem.</p>
                          </div>
                       </div>
                       <div className="space-y-8 font-black">
                          <div>
                             <h4 className="text-slate-800 mb-3 text-xs tracking-wide">3. Kriteria Kohort 2027</h4>
                             <p className="text-slate-500 font-bold leading-relaxed text-[11px]">Kriteria kohort umur dikira mengikut standard KPM bagi tahun sesi akademik 2027 melalui No. MyKid murid:<br/>• 7 Tahun: Lahir 02/01/2020 - 01/01/2021<br/>• 6 Tahun: Lahir 02/01/2021 - 01/01/2022</p>
                          </div>
                          <div>
                             <h4 className="text-slate-800 mb-3 text-xs tracking-wide">4. Pengurusan PPD Berpusat</h4>
                             <p className="text-slate-500 font-bold leading-relaxed text-[11px]">Fungsi muat turun (CSV) membolehkan pentadbir menyimpan salinan unik bagi seluruh negeri. PPD juga boleh mengemaskini atau memadam data khusus daerah mereka secara bebas di tab Pengurusan Data.</p>
                          </div>
                       </div>
                    </div>
                 </div>
              </div>
            )}
          </main>
        </div>
      );
    };

    const container = document.getElementById('root');
    const root = ReactDOM.createRoot(container);
    root.render(<App />);
  </script>
</body>
</html>
